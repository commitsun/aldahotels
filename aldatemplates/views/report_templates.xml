    <template id="external_layout_background_footer_font_size" inherit_id="web.external_layout_background">
        <xpath expr="//div[@t-field='company.report_footer']/../.." position="attributes">
            <attribute name="style">font-size: 9px;</attribute>
        </xpath>
    </template>

    <template id="external_layout_standard_footer_font_size" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@name='financial_infos']/../.." position="attributes">
            <attribute name="style">font-size: 9px;</attribute>
        </xpath>
    </template>

</odoo>
