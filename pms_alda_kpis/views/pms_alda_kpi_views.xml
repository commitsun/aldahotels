<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pms_alda_kpi_form" model="ir.ui.view">
        <field name="name">pms.alda.kpi.form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='property_general']//field[@name='open_date']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='property_general']//field[@name='email']" position="after">
                <sheet>
                    <group  colspan="2" col="2" string="Property Opening">
                        <field name="open_date" />
                    </group>
                        <div >
                            <group  colspan="8" col="7" string="Alda Hotels Kpi's"
                            style="border-top-left-radius: 6px; 
                                            border-top-right-radius: 6px; 
                                            font-size: 12px; 
                                            border-collapse: separate;  
                                            font-weight: bold;  min-height: 18px; 
                                            background-color: rgba(158, 158, 158, 0.1); 
                                            ">
                                <field name="is_ramp_up" />
                                <field name="is_ramp_rate"/>
                                <field name="months_to_ramp_rate"/>
                            </group>
                        </div>
                   
                </sheet>
            </xpath>
        </field>
    </record>
</odoo>